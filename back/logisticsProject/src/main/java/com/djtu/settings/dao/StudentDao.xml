<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.djtu.settings.dao.StudentDao">

    <select id="getStudentByUsername" resultType="com.djtu.settings.pojo.Student">
        select id,
               username,
               password,
               school_sys,
               salt,
               name,
               sex,
               enter_date,
               college,
               stu_class,
               remark,
               sno,
               dorm_id,
               tutor_id,
               avatar_path
        from tbl_student
        where username=#{username}
    </select>
    <select id="getStudentBySno" resultType="com.djtu.settings.pojo.Student">
        select id,
               username,
               password,
               school_sys,
               salt,
               name,
               sex,
               enter_date,
               college,
               stu_class,
               remark,
               sno,
               dorm_id,
               tutor_id,
               avatar_path
        from tbl_student
        where sno=#{sno}
    </select>
    <select id="getStudentTotal" resultType="java.lang.Integer">
        select count(*) from tbl_student;
    </select>

    <insert id="setStudent">
        insert into tbl_student(
                                id,
                                username,
                                password,
                                salt,
                                name,
                                sex,
                                enter_date,
                                school_sys,
                                college,
                                stu_class,
                                remark,
                                sno)
        values(
               #{id},
               #{username},
               #{password},
               #{salt},
               #{name},
               #{sex},
               #{enterDate},
               #{schoolSys},
               #{college},
               #{stuClass},
               #{remark},
               #{sno})
    </insert>
</mapper>
